name:                CsvDiff
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/cmagnuson/CsvDiff#readme
license:             BSD3
license-file:        LICENSE
author:              Carl Magnuson
maintainer:          magnuson.carl@gmail.com
copyright:           Copyright: (c) 2017 Carl Magnuson
category:            Application
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     CsvDiff
                      , CsvDiffImpl
  build-depends:       base >= 4.7 && < 5
                      , csv
                      , containers
                      , safe
                      , text
  default-language:    Haskell2010

executable CsvDiff-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , CsvDiff
                     , csv
                     , parsec
  default-language:    Haskell2010

test-suite CsvDiff-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , CsvDiff
                     , QuickCheck
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/cmagnuson/CsvDiff
